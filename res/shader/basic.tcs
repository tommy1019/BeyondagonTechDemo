#version 410

layout(vertices = 16) out;
in vec3 vPosition[];
out vec3 tcPosition[];

#define ID gl_InvocationID

#define RES 8

void main()
{
    tcPosition[ID] = vPosition[ID];
    if (ID == 0)
    {
        gl_TessLevelInner[0] = RES;
        gl_TessLevelOuter[0] = RES;
        gl_TessLevelOuter[1] = RES;
        gl_TessLevelOuter[2] = RES;
        gl_TessLevelOuter[3] = RES;
    }
}
